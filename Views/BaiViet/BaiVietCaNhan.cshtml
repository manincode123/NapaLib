@{
    ViewBag.Title = "Bài viết cá nhân";
}
@Html.AntiForgeryToken()
<div class="danhSachBaiVietHeaderContainer">
    <span class="danhSachBaiVietHeader">Bài viết</span>
    <span class="danhSachBaiVietHeaderText" style="color: lightgrey">|</span>
    <span class="danhSachBaiVietHeaderText">Cá nhân</span>
</div>
<table class="table table-striped table-bordered" id="baiVietCaNhan">
    <thead>
        <tr>
            <th>Ảnh bìa</th>
            <th>Tên bài viết</th>
            <th>Chuyên mục</th>
            <th>Ngày tạo</th>
            <th>Số lượt xem</th>
            <th>Tình trạng</th>
            <th>Quản lý</th>
        </tr>
    </thead>
</table>
<div class="modal fade" id="quanLyBaiVietModal" tabindex="-1" role="dialog" aria-labelledby="quanLyBaiVietModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="quanLyBaiVietModal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" id="xoaBaiViet">Xóa</button>

            </div>
        </div>
    </div>
</div>

<script type="text/x-template" id="hoatDongTemplate">
    <div class="hoatDongContainer-TrangThemBaiViet">
        <img src="<%= anhBia %>" alt="" class="anhBiaHoatDong-TrangThemBaiViet" />
        <div class="hoatDongWrapper-TrangThemBaiViet">
            <div class="thongTinHoatDong-TrangThemBaiViet">
                <div><%= tenHoatDong %></div>
                <div><%= thoiGianBatDau %> -  <%= thoiGianKetThuc %></div>
                <div><%= diaDiem %></div>
            </div>
        </div>
    </div>
</script>

@section scripts
{   
    @Scripts.Render("~/bundles/DataTable")
    <script src="@Url.Content("~/Scripts/SiteScript/services/BaiVietServices.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/controllers/BaiVietControllers.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            showTabProfile("baiVietMenu",0);
            QuanLyBaiVietController.initPage_TrangBaiVietCaNhan();
        });
    </script>
}