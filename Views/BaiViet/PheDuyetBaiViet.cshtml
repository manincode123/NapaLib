@{
    ViewBag.Title = "Phê duyệt bài viết";
}
@Html.AntiForgeryToken()      
<div class="HeaderContainer">
    <span class="Header">Bài viết</span>
    <span class="HeaderText" style="color: lightgrey">|</span>
    <span class="HeaderText" style="color: coral">Phê duyệt bài viết</span>
</div>
<table class="table table-bordered table-striped" id="baiVietPheDuyet" style="width: 100%">
    <thead>
    <tr>
        <th>Ảnh bìa</th>
        <th>Tên bài viết</th>
        <th>Sơ lược</th>
        <th>Chuyên mục</th>
        <th>Ngày tạo</th>
        <th>Người viết</th>
        <th>Phê duyệt</th>
    </tr>
    </thead>
</table>     
<div class="modal fade" id="pheDuyetModal" tabindex="-1" role="dialog" aria-labelledby="pheDuyetModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="pheDuyetModal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success" id="pheDuyetBaiViet">Phê duyệt</button>
                <button type="button" class="btn btn-primary" id="chinhSuaBaiViet">Chỉnh sửa</button>
                <button type="button" class="btn btn-danger" id="xoaBaiViet">Xóa</button>

            </div>
        </div>
    </div>
</div>
@section scripts
{   
    @Scripts.Render("~/bundles/DataTable")
    <script src="@Url.Content("~/Scripts/SiteScript/services/BaiVietServices.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/controllers/BaiVietControllers.js")" type="text/javascript"></script>
    <script type="text/x-template" id="hoatDongTemplate">
        <div class="hoatDongContainer-TrangThemBaiViet">
            <img src="<%= anhBia %>" alt="" class="anhBiaHoatDong-TrangThemBaiViet" />
            <div class="hoatDongWrapper-TrangThemBaiViet">
                <div class="thongTinHoatDong-TrangThemBaiViet">
                    <div><%= tenHoatDong %></div>
                    <div><%= thoiGianBatDau %> -  <%= thoiGianKetThuc %></div>
                    <div><%= diaDiem %></div>
                </div>
            </div>
        </div>
    </script>

    <script>
        $(document).ready(function () {
            showTabQuanLy("quanLyBaiVietMenu", 1);
            PheDuyetBaiVietController.initPage();
        });

    </script>
}
