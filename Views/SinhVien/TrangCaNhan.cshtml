@model int

@{
    ViewBag.Title = "Trang cá nhân";
}   
@Html.AntiForgeryToken()

<link href="/Content/SiteCss/TrangQuanLySinhVienLop.css" rel="stylesheet">
<link href="/Content/croppie/croppie.css" rel="stylesheet">
<button id="chinhSuaSinhVien" class="btn btn-primary">Chỉnh sửa thông tin</button>
<div class="HeaderContainer">
    <span class="Header">Sinh viên</span>
    <span class="HeaderText" style="color: lightgrey">|</span>
    <span class="HeaderText" style="color: coral">Trang cá nhân</span>
</div>
<div style="margin-top: 40px" class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <img src="/Content/AnhBia/AnhSV/avatar.png" alt="Ảnh bìa sinh viên" id="anhTrangCaNhanSV" class="img-fluid" />
    </div>
    <div class="col-12 col-md-6 col-lg-4">
        <div class="ttContainer-TrangCaNhan ">
            <div id="ten-TrangCaNhan"></div>
            <div class="thongTin-TrangCaNhan">
                MSSV:
                <div id="MSSV-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>
            <div class="thongTin-TrangCaNhan">
                Lớp:
                <a id="lop-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></a>
            </div>
            <div class="thongTin-TrangCaNhan">
                Giới tính:
                <div id="gioiTinh-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>

            <div class="thongTin-TrangCaNhan">
                Ngày sinh:
                <div id="ngaySinh-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>
            <div class="thongTin-TrangCaNhan">
                Dân tộc:
                <div id="danToc-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>
            <div class="thongTin-TrangCaNhan">
                Tôn giáo:
                <div id="tonGiao-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>
            <div class="thongTin-TrangCaNhan">
                Khóa:
                <div id="khoa-TrangCaNhan" class="thongTinCuThe-TrangCaNhan"></div>
            </div>
        </div>

    </div>
    <div class="col-md-6 col-lg-4">
        <div class="gioiThieuContainer-TrangCaNhan">
            <div class="gioiThieuLabel-TrangCaNhan">Giới thiệu</div>
            <div id="gioiThieu-TrangCaNhan"></div>
        </div>
    </div>

</div>

<div style="margin-top: 50px" class="row">
    <div class="col-12 col-md-12 col-lg-6">
        <div class="sdtDcContainer-TrangCaNhan">
            <div class="sdtDcLabel-TrangCaNhan">
                <span>Điện thoại</span>
                <div class="btn btn-primary" id="themSdt">Thêm số</div>
            </div>
            <table id="sdt-TrangCaNhan" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>SĐT</th>
                        <th>Mô tả</th>
                        <th>Quản lý</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
    <div class="col-12 col-md-12 col-lg-6">
        <div class="sdtDcContainer-TrangCaNhan">
            <div class="sdtDcLabel-TrangCaNhan">
                <span>Địa chỉ</span>
                <div class="btn btn-primary" id="themDiaChi">Thêm địa chỉ</div>
            </div>
            <table id="diaChi-TrangCaNhan" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Địa chỉ</th>
                        <th>Loại địa chỉ</th>
                        <th>Quản lý</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div style="margin-top: 50px" class="row">
    <div class="col-12 col-md-4 col-lg-4 thamGiaInfo">
        <div>Là Hội viên</div>
        <div class="thamGiaContainer" id="hoiVienStatus"></div>
        <div style="font-size: 20px;display: none">Ngày vào hội: <span id="ngayVaoHoi" style="font-weight: bold"></span></div>
    </div>
    <div class="col-12 col-md-4 col-lg-4 thamGiaInfo">
        <div>Là Đoàn viên</div>
        <div class="thamGiaContainer" id="doanVienStatus"></div>
        <div style="font-size: 20px;display: none">Ngày vào đoàn: <span id="ngayVaoDoan" style="font-weight: bold"></span></div>
        <div style="font-size: 20px;display: none">Nơi vào đoàn: <span id="noiVaoDoan" style="font-weight: bold"></span></div>
    </div>
    <div class="col-12 col-md-4 col-lg-4 thamGiaInfo">
        <div>Là Đảng viên</div>
        <div class="thamGiaContainer" id="dangVienStatus">

        </div>
        <div style="font-size: 20px;display: none">Ngày vào đảng: <span id="ngayVaoDang" style="font-weight: bold"></span></div>
        <div style="font-size: 20px;display: none">Nơi vào đảng: <span id="noiVaoDang" style="font-weight: bold"></span></div>
    </div>

</div>
<div class="modal fade" id="saveSinhVienModal" style="overflow-y: scroll;" tabindex="-1" role="dialog" aria-labelledby="saveSinhVienModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Chỉnh sửa thông tin</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">    
                <form id="saveSinhVienForm">
                    <div class="row">
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="hoVaTenLotSinhVien-input" style="font-size: 30px;">Họ và tên lót</label>
                            <input value="" name="hoVaTenLotSinhVien-input" id="hoVaTenLotSinhVien-input" type="text" class="form-control" style="max-width: 80%;" maxlength="100" />
                            <small id="hoVaTenLotSinhVien-inputLimit"></small>
                        </div>
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="tenSinhVien-input" style="font-size: 30px;">Tên</label>
                            <input value="" name="tenSinhVien-input" id="tenSinhVien-input" type="text" class="form-control" style="max-width: 80%;" maxlength="50" />
                            <small id="tenSinhVien-inputLimit"></small>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="mssv-input" style="font-size: 30px;">Mã số sinh viên</label>
                            <input value="AS" id="mssv-input" type="text" class="form-control" style="max-width: 80%;" maxlength="30" disabled />
                        </div>
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="ngaySinh-input" style="font-size: 30px;">Ngày sinh</label>
                            <input value="" name="ngaySinh-input" id="ngaySinh-input" type="date" class="form-control" style="max-width: 80%;" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="gioiTinh-input" style="font-size: 30px;">Giới tính</label>
                            <select class="form-control" name="gioiTinh-input" id="gioiTinh-input" style="max-width: 80%;"></select>
                        </div>
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="khoaHoc-input" style="font-size: 30px;">Khóa học</label>
                            <select class="form-control" id="khoaHoc-input" style="max-width: 80%;" disabled></select>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="danToc-input" style="font-size: 30px;">Dân tộc</label>
                            <select class="form-control" name="danToc-input" id="danToc-input" style="max-width: 80%"></select>
                        </div>
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="tonGiao-input" style="font-size: 30px;">Tôn giáo</label>
                            <select class="form-control" name="tonGiao-input" id="tonGiao-input" style="max-width: 80%;"></select>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="anhBiaSv_brower" style="font-size: 30px;">Ảnh bìa</label>
                            <img id="anhBiaSv" src="/Content/AnhBia/AnhSV/avatar.png" />
                            <input id="anhBiaSv_brower" type="file" />
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cropImagePop" id="editAnhBiaSvBtn">
                                Chỉnh sửa ảnh
                            </button>
                        </div>
                        <div class="form-group col-6 col-md-6 col-lg-6">
                            <label for="gioiThieu-input" style="font-size: 30px;">Giới thiệu</label>
                            <textarea id="gioiThieu-input" cols="" rows="10" class="form-control" style="max-width: 80%;"></textarea>    
                            <small id="gioiThieu-inputLimit"></small>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="font-size: 20px">Đóng</button>
                <button type="button" class="btn btn-primary" id="saveSinhVien" style="font-size: 20px">Chỉnh sửa</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="cropImagePop" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel"><strong>Chỉnh sửa ảnh</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="anhBiaSv-Wrapper"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" id="cropImageBtn" class="btn btn-primary">Up ảnh bìa</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="saveSdtModal" tabindex="-1" role="dialog" aria-labelledby="saveSdtModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><strong>Thêm số điện thoại</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="sdtForm">
                    <div class="form-group">
                        <label for="sdt-input" style="font-size: 30px;">Số điện thoại</label>
                        <input class="form-control" name="sdt-input" id="sdt-input" style="max-width: 80%;">
                    </div>
                    <div class="form-group">
                        <label for="moTaSdt-input" style="font-size: 30px;">Mô tả</label> 
                        <input class="form-control" name="moTaSdt-input" id="moTaSdt-input" style="max-width: 80%;"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" id="saveSdt" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="saveDiaChiModal" tabindex="-1" role="dialog" aria-labelledby="saveDiaChiModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><strong>Thêm địa chỉ</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">  
                <form id="diaChiForm">
                    <div class="form-group">
                        <label for="diaChiTinh-input" style="font-size: 30px;">Tỉnh</label>
                        <select class="form-control" name="diaChiTinh-input" id="diaChiTinh-input"></select>
                    </div>
                    <div class="form-group">
                        <label for="diaChiHuyen-input" style="font-size: 30px;">Huyện</label>
                        <select class="form-control" name="diaChiHuyen-input" id="diaChiHuyen-input"></select>
                    </div>
                    <div class="form-group">
                        <label for="diaChiXa-input" style="font-size: 30px;">Xã</label>
                        <select class="form-control" name="diaChiXa-input" id="diaChiXa-input"></select>
                    </div>
                    <div class="form-group">
                        <label for="soNhaTenDuong-input" style="font-size: 30px;">Địa chỉ</label>
                        <input class="form-control" name="soNhaTenDuong-input" id="soNhaTenDuong-input"/>
                    </div>   
                    <div class="form-group">
                        <label for="loaiDiaChi-input" style="font-size: 30px;">Loại địa chỉ</label>
                        <select class="form-control" name="loaiDiaChi-input" id="loaiDiaChi-input" style="max-width: 80%;">
                            <option value="1">Hộ khẩu thường trú</option>
                            <option value="2">Nơi ở hiện tại</option>
                            <option value="3">Địa chỉ liên lạc</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" id="saveDiaChi" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/DataTable")
    <script src="@Url.Content("~/Scripts/croppie/croppie.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/services/SinhVienService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/controllers/SinhVienController.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            showTabProfile("caNhanMenu", 0);
            var idSinhVien = @Model;
            QuanLyTrangCaNhanController.initTrang(idSinhVien);
        });

    </script>
}