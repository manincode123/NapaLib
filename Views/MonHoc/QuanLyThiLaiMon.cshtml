@model int

@{
    ViewBag.Title = "Quản lý thi lại môn học";
}
<link href="@Url.Content("~/Content/SiteCss/MonHoc.css")" rel="stylesheet" type="text/css" /> 
<a href='/MonHoc/QuanLyMonHoc/@Model' class="btn btn-success" style="font-size: 25px">
    <i class="fas fa-angle-left"></i>
    Quản lý môn học
</a>
<h1 style="text-align: center; font-weight: bold">Quản lý thi lại môn học</h1>
<div id="thongTinMonHoc">
    <div class="row">                       
        <h3 class="col-lg-6 col-md-6 col-6">Môn học: <span id="tenMonHoc"></span></h3>
        <h3 class="col-lg-6 col-md-6 col-6">Ký hiệu: <span id="kyHieuMonHoc"></span></h3>
        <h3 class="col-lg-6 col-md-6 col-6">Số tiết: <span id="soTiet"></span></h3>
        <h3 class="col-lg-6 col-md-6 col-6">Số học phần: <span id="soHocPhan"></span></h3>
        <h3 class="col-lg-6 col-md-6 col-6">Số cột điều kiện: <span id="haiDiemDk"></span></h3>
        <h3 class="col-lg-6 col-md-6 col-6">Loại môn: <span id="loaiMon"></span></h3>
    </div>
</div>
<div>
    <hr />
    <h2 style="font-weight: bold">Danh sách sinh viên phải thi lại</h2>
    <table class="table table-striped table-bordered" id="danhSachSvPhaiThiLai">
        <thead>
        <tr>
            <th>MSSV</th>
            <th>Họ tên</th>
            <th>Lớp</th>
            <th>Điểm Trung bình</th>
            <th>Quản lý</th>
        </tr>
        </thead>
    </table>
</div>

<div>
    <hr />
    <h2 style="font-weight: bold">Danh sách lịch thi lại</h2>
    <table class="table table-striped table-bordered" id="danhSachLichThiLai">
        <thead>
            <tr>
                <th>Thời gian</th>
                <th>Địa điểm thi</th>
                <th>Tình trạng</th>
                <th>Quản lý</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/DataTable")
    <script>
        $(document).ready(function() {
            var idMonHoc = @Model;
            QuanLyThiLaiMonController.initTrang(idMonHoc);
        });
    </script>
}
