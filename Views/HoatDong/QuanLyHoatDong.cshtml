@{
    ViewBag.Title = "Quản lý hoạt động học viện";

}
<h2 style="margin: 20px 0 20px; text-align: center">QUẢN LÝ HOẠT ĐỘNG CHUNG HỌC VIỆN</h2>

@Html.AntiForgeryToken()   
<link href="/Content/SiteCss/HoatDongStyles.css" rel="stylesheet">
<div class="row" id="thongKeHd-TrangChiTietLop">

    <div class="col-12 col-md-6 col-lg-3 cardContainer">
        <div class="card">
            <div class="iconDangDienRa-card">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="number-card" id="hdThangNay-TrangQuanLyHd"></div>
            <div class="explain-card">hoạt động tổ chức</div>
            <div class="explain-card">tháng này</div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3 cardContainer">
        <div class="card">
            <div class="iconDangDienRa-card">
                <i class="fas fa-bullhorn"></i>
            </div>
            <div class="number-card" id="hdNamNay-TrangQuanLyHd"></div>
            <div class="explain-card">hoạt động tổ chức</div>
            <div class="explain-card">năm nay</div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3 cardContainer">
        <div class="card">
            <div class="iconDangDienRa-card">
                <i class="fas fa-user-friends"></i>
            </div>
            <div class="number-card" id="thamGiaThangNay-TrangQuanLyHd"></div>
            <div class="explain-card">lượt tham gia</div>
            <div class="explain-card">tháng này</div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-lg-3 cardContainer">
        <div class="card">
            <div class="iconDangDienRa-card">
                <i class="fas fa-users"></i>
            </div>
            <div class="number-card" id="thamGiaNamNay-TrangQuanLyHd"></div>
            <div class="explain-card">lượt tham gia</div>
            <div class="explain-card">năm nay</div>
        </div>
    </div>

</div>
 
<div>  
    <hr />
    <div class="row" style="margin: 30px 0 30px 0">
        <div class="col-12 col-md-12 col-lg-6" style="text-align: center">
            <button class="btn btn-primary" style="width: 55%;font-size: 30px;" id="themHoatDong">Thêm hoạt động</button>
        </div>
        <div class="col-12 col-md-12 col-lg-6" style="text-align: center">
            <a href="/HoatDong/PheDuyetHoatDong" class="btn btn-success" style="width: 55%;font-size: 30px;color: #fff;">
                Phê duyệt hoạt động
                <span class="badge badge-pill badge-danger" style="display: none;top: -30px;" id="soHdChoPheDuyetBdg"></span>
            </a>    
            
        </div>
    </div>
</div>

<div style="margin-bottom: 50px">
    <hr>
    <h3 style="color: coral;font-weight: bold;font-size: 2.3rem;margin-bottom: 20px;">Các hoạt động đang diễn ra</h3>
    <div class="row">
        <div class="col-12 col-md-3 col-lg-3 ">
            <div class="card">
                <div class="iconDangDienRa-card">
                    <i class="fas fa-toggle-on"></i>
                </div>
                <div class="number-card" id="soHdDangDienRa-TrangQuanLyHd"></div>
                <div class="explain-card">hoạt động</div>
                <div class="explain-card">đang diễn ra</div>
            </div>
        </div>
        <div class="col-12 col-md-9 col-lg-9 ">
            <table id="hdDangDienRaTable-TrangQuanLyHd" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên hoạt động</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Số lượt tham gia</th>
                        <th>Đơn vị tổ chức</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>

</div>

<div style="margin-bottom: 50px">
    <hr />
    <h3 style="color: coral;font-weight: bold;font-size: 2.3rem;margin-bottom: 20px;">Các hoạt động tổ chức tháng này</h3>
    <table id="hdThangNayTable-TrangQuanLyHd" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên hoạt động</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Số lượt SV tham gia</th>
                <th>Đơn vị tổ chức</th>
                <th>Tình trạng</th>
            </tr>
        </thead>
    </table>
</div>           
<div style="margin-bottom: 50px">
    <hr />
    <h3 style="color: coral;font-weight: bold;font-size: 2.3rem;margin-bottom: 20px;">Các hoạt động tổ chức trong năm nay</h3>
    <table id="hdNamNayTable-TrangQuanLyHd" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên hoạt động</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Số lượt SV tham gia</th>
                <th>Đơn vị tổ chức</th>
                <th>Tình trạng</th>
            </tr>
        </thead>
    </table>
</div>    
<div class="modal fade" id="themHoatDongModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="themHoatDongModal-title"></h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="themHoatDongModal-body">

            </div>
            <div class="modal-footer">  
                <button type="button" class="btn btn-default" data-dismiss="modal" style="font-size: 25px">Đóng</button>
                <button type="button" class="btn btn-success" style="font-size: 25px" id="themHoatDongBtn"></button>
                
            </div>
        </div>
    </div>
</div>


@section scripts
{                   
    @Scripts.Render("~/bundles/DataTable")
    <script src="@Url.Content("~/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/ckfinder/ckfinder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/services/HoatDongService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/controllers/HoatDongController.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            showTabQuanLy("quanLyHoatDongMenu", 0);
            QuanLyHoatDongController.initTrangQuanLyHoatDong();
        });
    </script>
}
