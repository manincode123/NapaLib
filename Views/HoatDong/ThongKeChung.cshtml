@{
    ViewBag.Title = "Thống kê chung hoạt động học viện";
}  
@Html.AntiForgeryToken()
<link href="/Content/SiteCss/HoatDongStyles.css" rel="stylesheet">

<div class="HeaderContainer">
    <span class="Header">Hoạt động</span>
    <span class="HeaderText" style="color: lightgrey">|</span>
    <span class="HeaderText" style="color: coral">Thống kê chung</span>
</div>

<div id="thongKeHoatDongChung_body">
    <div class="form-group" style="text-align: center">
        <span for="namHocPicker" style="font-size: 30px;font-weight: bold">Năm học: </span>
        <select class="form-control" id="namHocPicker">
            <option value="" disabled selected>Chọn năm</option>
        </select>
    </div>
    <hr />
    <div class="row" id="soLieuContainer_ThongKeChung">
        <div class="col-12 col-md-12 col-lg-6 cardContainer">
            <div class="card">
                <div class="iconDangDienRa-card">
                    <i class="fas fa-bullhorn"></i>
                </div>
                <div class="number-card" id="soHoatDongToChuc_ThongKeChung"></div>
                <div class="explain-card">hoạt động tổ chức</div>
                <div class="explain-card">trong năm</div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-6 cardContainer">
            <div class="card">
                <div class="iconDangDienRa-card">
                    <i class="fas fa-users"></i>
                </div>
                <div class="number-card" id="soLuotThamGia_ThongKeChung"></div>
                <div class="explain-card">lượt tham gia</div>
                <div class="explain-card">trong năm</div>
            </div>
        </div>
    </div>
    <hr />
    <h2 class="label_thongKeHoatDong">Hoạt động tổ chức</h2>
    <table id="hoatDongToChuc_ThongKeChung" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Tên hoạt động</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Số lượt tham gia</th>
                <th>Cấp hoạt động</th>
                <th>Đơn vị tổ chức</th>
            </tr>
        </thead>
    </table>
    <hr />
    <h2 class="label_thongKeHoatDong">Thống kê hoạt động</h2>
    <div id="thongKeHoatDong">
        <div class="bieuDoContainer-TrangChiTietLop">
            <canvas id="bieuDoSoHoatDongToChuc"></canvas>
        </div>
        <div class="bieuDoContainer-TrangChiTietLop">
            <canvas id="bieuDoSoLuotThamGiaHoatDong"></canvas>
        </div>
        <div class="bieuDoContainer-TrangChiTietLop">
            <canvas id="bieuDoHoatDongTheoCap"></canvas>
        </div>
    </div>
</div>

@section scripts
{  
    @Scripts.Render("~/bundles/DataTable")
    @Scripts.Render("~/bundles/Chart")
    <script src="@Url.Content("~/Scripts/SiteScript/services/HoatDongService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/SiteScript/controllers/HoatDongController.js")" type="text/javascript"></script>
    <script type="text/x-template" id="optionNamHoc_Template">
        <option value="<%=namHoc%>"><%=namHoc%>-<%=namHoc+1%></option>
    </script>
    <script>
        $(document).ready(function () {
            showTabProfile("hoatDongMenu", 2);
            ThongKeHoatDongChungController.initTrang();
        });
    </script>
}